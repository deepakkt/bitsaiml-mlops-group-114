{
  "title": "Heart API Dashboard",
  "uid": "heart-api-dashboard",
  "description": "Prometheus-backed view for FastAPI heart-api: request rate, latency, errors, and pod resources.",
  "tags": ["heart-api", "prometheus"],
  "timezone": "",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "editable": true,
  "graphTooltip": 0,
  "panels": [
    {
      "id": 1,
      "title": "Request Rate (req/s)",
      "type": "timeseries",
      "datasource": "$datasource",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "options": {
        "legend": { "displayMode": "list", "placement": "right" },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": {
        "defaults": { "unit": "reqps", "displayName": "req/s" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(heart_api_requests_total[1m]))",
          "legendFormat": "all"
        },
        {
          "refId": "B",
          "expr": "sum by (endpoint) (rate(heart_api_requests_total[1m]))",
          "legendFormat": "{{endpoint}}"
        }
      ]
    },
    {
      "id": 2,
      "title": "P95 Latency (s)",
      "type": "timeseries",
      "datasource": "$datasource",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "options": {
        "legend": { "displayMode": "list", "placement": "right" },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": {
        "defaults": { "unit": "s" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "histogram_quantile(0.95, sum(rate(heart_api_request_latency_seconds_bucket[5m])) by (le))",
          "legendFormat": "p95"
        }
      ]
    },
    {
      "id": 3,
      "title": "Error Rate (5m)",
      "type": "timeseries",
      "datasource": "$datasource",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "options": {
        "legend": { "displayMode": "list", "placement": "right" },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": {
        "defaults": { "unit": "reqps" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(heart_api_errors_total[5m]))",
          "legendFormat": "all endpoints"
        },
        {
          "refId": "B",
          "expr": "sum by (endpoint) (rate(heart_api_errors_total[5m]))",
          "legendFormat": "{{endpoint}}"
        }
      ]
    },
    {
      "id": 4,
      "title": "Pod CPU (cores)",
      "type": "timeseries",
      "datasource": "$datasource",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "options": {
        "legend": { "displayMode": "list", "placement": "right" },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": {
        "defaults": { "unit": "cores" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (pod) (rate(container_cpu_usage_seconds_total{namespace=\"default\",pod=~\"heart-api-.*\",container!=\"POD\"}[5m]))",
          "legendFormat": "{{pod}}"
        }
      ]
    },
    {
      "id": 5,
      "title": "Pod Memory (MB)",
      "type": "timeseries",
      "datasource": "$datasource",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 },
      "options": {
        "legend": { "displayMode": "list", "placement": "right" },
        "tooltip": { "mode": "single" }
      },
      "fieldConfig": {
        "defaults": { "unit": "decmbytes" },
        "overrides": []
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (pod) (container_memory_working_set_bytes{namespace=\"default\",pod=~\"heart-api-.*\",container!=\"POD\"})",
          "legendFormat": "{{pod}}"
        }
      ]
    }
  ],
  "templating": {
    "list": [
      {
        "type": "datasource",
        "name": "datasource",
        "label": "Prometheus",
        "query": "prometheus",
        "refresh": 1,
        "current": {
          "selected": true,
          "text": "Prometheus",
          "value": "Prometheus"
        }
      }
    ]
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
